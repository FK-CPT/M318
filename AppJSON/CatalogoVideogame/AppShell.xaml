<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CatalogoVideogame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CatalogoVideogame"
    Shell.FlyoutBehavior="Disabled"
    Title="CatalogoVideogame">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Aggiunta Videogioco"
            ContentTemplate="{DataTemplate local:AggiungiVideogioco}"
            Route="AggiungiVideogioco"/>
    </TabBar>
</Shell>
