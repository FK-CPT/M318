<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppJSON.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Entry x:Name="entNome" Placeholder="Enter Name"/>
            <Entry x:Name="entPunteggio" Placeholder="Enter Score"/>
            <Button x:Name="btSalva" Text="Scrivi JSON" Clicked="btSalva_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
