<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_03AppListe.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Entry x:Name="entFrutto"/>
            <Editor x:Name="editFrutti"/>
            <Picker x:Name="pickFrutti" BackgroundColor="Beige" SelectedIndexChanged="pickFrutti_SelectedIndexChanged"/>
            <Entry Placeholder="Frutto Selezionato" x:Name="entSelezione" IsReadOnly="True"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
