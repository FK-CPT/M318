<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_02Geometria.RettangoloPage"
             Title="RettangoloPage">
    <ScrollView>
        <VerticalStackLayout
        Padding="20">

            <Label 
               Text="Rettangolo"
               TextColor="MediumPurple"
               FontSize="Header"
               Padding="20"
               FontAttributes="Italic"/>

            <Line 
                X1="0"
                Y1="0"
                X2="2000"
                Stroke="WhiteSmoke"/>

            <Label 
                Text="Lato Minore"
                FontSize="20"
                HorizontalOptions="Center"/>

            <Entry 
                x:Name="entLatoMinore"
                WidthRequest="300"
                Margin="30"/>

            <Label 
                Text="Lato Maggiore"
                FontSize="20"
                HorizontalOptions="Center"/>

            <Entry 
                x:Name="entLatoMaggiore"
                WidthRequest="300"
                Margin="30"/>

            <Label 
                Text="Area"
                FontSize="20"
                HorizontalOptions="Center"/>

            <Entry 
                x:Name="entArea" 
                IsReadOnly="True"
                WidthRequest="300"
                Margin="30"/>

            <Label 
                Text="Primetro"
                FontSize="20"
                HorizontalOptions="Center"/>

            <Entry 
                x:Name="entPerimetro" 
                IsReadOnly="True"
                WidthRequest="300"
                Margin="30"/>

            <Button 
                Text="Calcola" 
                Clicked="Button_Clicked"
                WidthRequest="200"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>