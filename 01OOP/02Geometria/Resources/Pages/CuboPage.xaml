<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_02Geometria.CuboPage"
             Title="CuboPage">
    <ScrollView>
        <VerticalStackLayout
        Padding="20">

            <Label 
                Text="Cubo"
                FontSize="Header"
                TextColor="MediumPurple"
                Padding="20"
                FontAttributes="Italic"/>

            <Line 
                X1="0"
                X2="2000"
                Y1="0"
                Stroke="WhiteSmoke"/>

            <Label 
                Text="Inserisci il Lato"
                FontSize="20"
                HorizontalOptions="Center"/>

            <Entry 
                WidthRequest="300"
                Margin="30"
                x:Name="entLato"/>

            <Label 
                Text="Perimetro"
                FontSize="20"
                HorizontalOptions="Center"/>

            <Entry 
                WidthRequest="300"
                Margin="30"
                x:Name="entPerimetro"/>

            <Label 
                Text="Volume"
                FontSize="20"
                HorizontalOptions="Center"/>

            <Entry 
                WidthRequest="300"
                Margin="30"
                x:Name="entVolume"/>

            <Button 
                Text="Calcola"
                WidthRequest="200"
                Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>