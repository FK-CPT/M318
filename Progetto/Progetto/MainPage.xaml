<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Progetto.MainPage">
    <ScrollView>
        <VerticalStackLayout Margin="30" Padding="20" Spacing="20">
            <Label Text="Playlist" FontSize="Header" FontAttributes="Bold"/>
            <Picker Title="Seleziona l'artista"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
            </Grid>

            <Frame Grid.Column="0" Grid.Row="0">
                <VerticalStackLayout>
                    <Image HeightRequest="400" WidthRequest="400"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
