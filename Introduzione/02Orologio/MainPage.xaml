<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_02Orologio.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="sveglia.png"
                HeightRequest="185"
                Aspect="AspectFit"/>

            <Label
                Margin="40"
                HorizontalOptions="Center"
                FontSize="Header"
                x:Name="labelData"/>

            <Button
                x:Name="CounterBtn"
                Text="Segnale Orario" 
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
