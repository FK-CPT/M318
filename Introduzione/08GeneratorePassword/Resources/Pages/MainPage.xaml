<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_08GeneratorePassword.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Margin="30">
            <Label 
                Text="Generatore di Password"
                FontSize="70"
                HorizontalOptions="Center"
                Padding="30"/>

            <Line 
                Stroke="Blue" 
                X1="0"
                Y1="0"
                X2="1900"/>

            <Label 
                Text="Benvenuto nel generatore di Password!"
                Padding="30"
                FontSize="40"
                FontAttributes="Italic"
                HorizontalTextAlignment="Center"/>

            <Label 
                Text="Questo applicativo permette di generare una Password e di fare una convalida della propria Password."
                FontSize="15"
                HorizontalTextAlignment="Start"
                Padding="20"/>

            <Image 
                Source="password.jpg"
                Aspect="AspectFit"
                VerticalOptions="Center"
                HeightRequest="550"
                WidthRequest="1200"
                Margin="30"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
